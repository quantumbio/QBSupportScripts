#!/bin/bash

# ATTENTION: FOR PERMENENT CHANGES DO NOT EDIT THIS FILE
#     INSTEAD EDIT /home/oleg/TEST/qmechanic4/perl/phenix_bash.tmpl AND RERUN

# ----------------------------------------------------------------------------------------

# NOTE: the *.tmpl files located in $QBHOME/perl are Perl Text::Template files and therefore
#       are formatted in a particular manner to be filled in by QuantumBio Perl-based scripts.
#       They may need to be "tuned" to your environment.

# ----------------------------------------------------------------------------------------
# Update the QBHOME & PHENIX paths to be set for cluster locations
source /home/oleg/TEST/qmechanic4/etc/qbenv.sh
source /home/oleg/phenix-1.20.1-4487/phenix_env.sh
# ----------------------------------------------------------------------------------------

phenix.refine 1LRI+H.pdb 1LRI.mtz 1LRI.cif      qblib=True   refinement.refine.strategy=individual_sites+individual_adp nproc=4  output.write_geo_file=False  output.write_def_file=False  output.write_eff_file=False qblib_QM_method=pm6 qblib_MM_method=amberff14sb qblib_region_selection="resname CLR" qblib_region_radius=3.0 qblib_buffer_radius=0 qblib_np=4   qblib_mem=None   main.number_of_macro_cycles=2     
